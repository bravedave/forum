{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Make DVC Module",
      "type": "shell",
      "command": "vendor/bin/dvc",
      "args": [
        "make::crud_module",
        "-name=${input:moduleName}",
        "-fields=${input:fields}"
      ],
      "problemMatcher": [],
      "icon": {
        "id": "tools"
      },
      "group": {
        "kind": "build",
        "isDefault": true
      }
    },
    {
      "label": "ðŸš€ Launch Dev Server",
      "type": "shell",
      "command": "vendor/bin/dvc serve --port=8010",
      "problemMatcher": [],
      "isBackground": true,
      "presentation": {
        "reveal": "always",
        "panel": "new"
      }
    }
  ],
  "inputs": [
    {
      "id": "moduleName",
      "type": "promptString",
      "description": "Module name (e.g. ideas)"
    },
    {
      "id": "fields",
      "type": "promptString",
      "description": "Comma-separated fields (e.g. title,description)"
    }
  ]
}